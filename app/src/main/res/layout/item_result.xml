<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.kevin.cookingassistancecompanion.viewmodels.ScannedResultItemViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp">

        <View
            android:id="@+id/background"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/delete_backgroud"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/deletedImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/background2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:alpha="@{model.foregroundAlphaObservable}"
            android:background="@drawable/background_result_item"
            android:translationX="@{model.foregroundTranslationXObservable}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="150dp"
            android:alpha="@{model.foregroundAlphaObservable}"
            android:text="@={model.textObservable}"
            android:translationX="@{model.foregroundTranslationXObservable}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibleOrGone="@{model.editableObservable}" />

        <Button
            android:id="@+id/doneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="@{model.foregroundAlphaObservable}"
            android:onClick="@{() -> model.done()}"
            android:text="Done"
            android:translationX="@{model.foregroundTranslationXObservable}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/editText"
            app:layout_constraintTop_toTopOf="parent"
            app:visibleOrGone="@{model.editableObservable}" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:alpha="@{model.foregroundAlphaObservable}"
            android:text="@{model.textObservable}"
            android:translationX="@{model.foregroundTranslationXObservable}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibleOrGone="@{!model.editableObservable}"
            tools:text="temp ingredient" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
